{
    "name": "zaphyr-org/translate",
    "description": "A simple translator to serve your applications in multiple languages.",
    "keywords": [
        "translate",
        "translation",
        "translator",
        "language",
        "l10n",
        "i18n",
        "locale"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "merloxx",
            "email": "merloxx@zaphyr.org",
            "homepage": "https://merloxx.it",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.2",
        "ext-json": "*",
        "ext-simplexml": "*",
        "psr/container": "^1.0",
        "symfony/yaml": "^5.3",
        "zaphyr-org/utils": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "9.*",
        "phpstan/phpstan": "^1.9",
        "phpstan/phpstan-phpunit": "^1.1",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "3.*"
    },
    "autoload": {
        "psr-4": {
            "Zaphyr\\Translate\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zaphyr\\TranslateTests\\": "tests/"
        }
    },
    "scripts": {
        "cs": "phpcs --standard=PSR12 -n src",
        "cbf": "phpcbf --standard=PSR12 -n src",
        "unit": "phpunit --colors=always",
        "phpstan": "vendor/bin/phpstan analyse --memory-limit 512M",
        "test": [
            "@unit",
            "@phpstan",
            "@cs"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
